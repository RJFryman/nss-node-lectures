doctype html
//[if IE 9]><html class="lt-ie10" lang="en" > <![endif]
html(class='no-js', lang='en')
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title Priorities
    link(rel='stylesheet', href='/css/normalize.css')
    link(rel='stylesheet', href='/css/foundation.css')
    link(rel='stylesheet', href='/css/app.css')
    script(src='/js/vendor/modernizr.js')
  body
    .row
      .small-12.columns
        h1 Priorities
    .row
      .small-12.columns
        a.button.tiny.radius(href='/index.html') Task Management
    .row
      form#priority
        fieldset
          legend Create Priority
          .small-4.columns
            label Name
            input(placeholder='Name', name='name', autofocus=true)
          .small-4.columns
            label Value
            input(placeholder='Value', name='value')
          .small-4.columns
            button.small Save
    .row
      table#priorities
        thead
          th Name
          th Value
          th
          th
        tbody


