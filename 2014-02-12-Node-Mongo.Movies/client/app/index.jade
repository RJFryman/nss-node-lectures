doctype html
//[if IE 9]><html class="lt-ie10" lang="en" > <![endif]
html(class='no-js', lang='en')
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title Foundation 5
    link(rel='stylesheet', href='/css/vendor/normalize.css')
    link(rel='stylesheet', href='/css/vednor/foundation.css')
    link(rel='stylesheet', href='/css/app.css')
    script(src='/js/vendor/modernizr.js')
  body
    .row
      .small-12.columns
        h1 ImDB (copyright infringement)
    .row
      .small-12.columns
        button.radius.small.alert#toggleForm Toggle Form
    .row
      .small-12.columns
        form.hide#movie
          fieldset
            legend Movie
            .row
              .small-3.columns
                label Name
                input(type='text', name='name', autofocus=true)
              .small-3.columns
                label Rating
                input(type='text', name='rating')
              .small-3.columns
                label Run Time in Mins.
                input(type='text', name='runtime')
              .small-3.columns
                label Year of Release
                input(type='text', name='releaseYear')
            .row
              .small-3.columns
                label Studio
                input(type='text', name='studio')
              .small-3.columns
                label Director
                input(type='text', name='director')
              .small-6.columns
                label Poster
                input(type='text', name='poster')
            .row
              .small-9.columns
                label Actors
                input(type='text', name='actors')
              .small-3.columns
                label &nbsp;
                button.tiny.radius#createMovie Create Movie!
    .row
      .small-12.columns
        form.edithide#editmovie
          fieldset
            legend Movie
            .row
              .small-3.columns
                label Name
                input(type='text', name='name', autofocus=true)
                input(type='hidden', name='_id')
              .small-3.columns
                label Rating
                input(type='text', name='rating')
              .small-3.columns
                label Run Time in Mins.
                input(type='text', name='runtime')
              .small-3.columns
                label Year of Release
                input(type='text', name='releaseYear')
            .row
              .small-3.columns
                label Studio
                input(type='text', name='studio')
              .small-3.columns
                label Director
                input(type='text', name='director')
              .small-6.columns
                label Poster
                input(type='text', name='poster')
            .row
              .small-9.columns
                label Actors
                input(type='text', name='actors')
              .small-3.columns
                label &nbsp;
                button.tiny.radius#editMovie Edit Movie!
    .row
      .small-12.columns
        table#movies
          thead
            tr
              th Poster
              th Name
              th Rating
              th RunTime
              th Release Year
              th Studio
              th Director
              th Actors
              th Edit
              th Delete
          tbody


    script(src='/js/vendor/jquery.js')
    script(src='/js/vendor/foundation.js')
    script(src='/js/vendor/lodash.js')
    script(src='/js/source/main.js')

