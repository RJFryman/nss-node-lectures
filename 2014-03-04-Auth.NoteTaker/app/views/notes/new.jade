extends ../shared/template

block content
  .row
    .small-12.columns
      form(action='/notes', method='post', enctype='multipart/form-data')
        fieldset
          legend New Note
          .row
            .small-12.columns
              label Title
              input(type='text' name='title' required placeholder='Title')
          .row
            .small-12.columns
              label Body
              textarea(name='body' required)
          .row
            .small-12.columns
              label Create Date
              input(type='date' name='dateCreated')
          .row
            .small-12.columns
              label Tags
              input(type='text' name='tags')
          .row
            .small-12.columns
              label &nbsp;
              button Save Note
